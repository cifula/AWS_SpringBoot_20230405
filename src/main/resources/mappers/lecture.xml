<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.web.study.repository.LectureRepository">

	<insert id="saveLecture" parameterType="Lecture">
	  insert into lecture_mst
	  values (0, #{lecture_name}, #{lecture_price}, #{instructor_id})
	</insert>
	
	<select id="getLectureAll" resultType="Lecture">
	  select
	    ltm_id,
	    ltm_name,
	    ltm_price,
	    itm_id
	  from
	    lecture_mst
	</select>
	
	<select id="findLectureById" parameterType="Integer" resultType="Lecture">
	  select
	    ltm_id,
	    ltm_name,
	    ltm_price,
	    itm_id
	  from
	    lecture_mst
	  where
	    id = #{id}
	</select>
</mapper>